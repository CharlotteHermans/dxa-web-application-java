    <groupId>org.dynamicdelivery</groupId>
    <artifactId>dd4t-core</artifactId>
    <version>1.31</version>

    <name>Dynamic Delivery for Tridion Core</name>
    <description>Core implementation of the Dynamic Delivery for Tridion (DD4T) library.</description>

    <parent>
