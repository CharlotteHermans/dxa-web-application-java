<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.sdl.webapp.dd4t"/>

    <bean id="linkProvider" class="org.dd4t.providers.impl.BrokerLinkProvider"/>
    <bean id="cacheProvider" class="org.dd4t.core.caching.impl.EHCacheProvider"/>
    <bean id="pageProvider" class="org.dd4t.providers.impl.BrokerPageProvider"/>
    <bean id="componentProvider" class="org.dd4t.providers.impl.BrokerComponentProvider"/>

    <bean id="serializer" class="org.dd4t.core.serializers.impl.xml.XmlSerializer"/>
    <bean class="org.dd4t.core.serializers.impl.SerializerFactory">
        <constructor-arg name="serializerInstance" ref="serializer"/>
    </bean>

    <bean id="genericComponentFactory" class="org.dd4t.core.factories.impl.ComponentFactoryImpl">
        <property name="cacheProvider" ref="cacheProvider"/>
        <property name="componentProvider" ref="componentProvider"/>
    </bean>

    <bean id="linkResolver" class="org.dd4t.core.resolvers.impl.DefaultLinkResolver">
        <property name="contextPath" value=""/>
        <property name="linkProvider" ref="linkProvider"/>
    </bean>

    <bean id="hybridPublishingFilter" class="org.dd4t.core.filters.impl.HybridPublishingFilter" />

    <bean id="richTextWithLinksResolverFilter" class="org.dd4t.core.filters.impl.RichTextWithLinksResolverFilter">
        <property name="linkResolver" ref="linkResolver"/>
    </bean>

    <bean id="genericPageFactory" class="org.dd4t.core.factories.impl.PageFactoryImpl">
        <property name="cacheProvider" ref="cacheProvider"/>
        <property name="pageProvider" ref="pageProvider"/>
        <property name="filters">
            <list>
                <ref bean="hybridPublishingFilter"/>
                <ref bean="richTextWithLinksResolverFilter"/>
            </list>
        </property>
    </bean>
</beans>
