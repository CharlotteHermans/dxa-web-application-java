<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.sdl.tridion.referenceimpl"/>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.UrlBasedViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/view/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <bean id="cacheProvider" class="org.dd4t.providers.impl.BrokerCacheProvider"/>
    <bean id="pageProvider" class="org.dd4t.providers.impl.BrokerPageProvider"/>
    <bean id="componentProvider" class="org.dd4t.providers.impl.BrokerComponentProvider"/>

    <bean id="genericComponentFactory" class="org.dd4t.core.factories.impl.GenericComponentFactory">
        <property name="cacheProvider" ref="cacheProvider"/>
        <property name="componentProvider" ref="componentProvider"/>
        <property name="pageFactory" ref="genericPageFactory"/>
    </bean>

    <bean id="linkResolver" class="org.dd4t.core.resolvers.impl.DefaultLinkResolver">
        <property name="contextPath" value="/tridion-reference-impl"/>
    </bean>

    <bean id="hybridPublishingFilter" class="org.dd4t.core.filters.impl.HybridPublishingFilter">
        <property name="genericComponentFactory" ref="genericComponentFactory"/>
    </bean>

    <bean id="richTextWithLinksResolverFilter" class="org.dd4t.core.filters.impl.RichTextWithLinksResolverFilter">
        <property name="linkResolver" ref="linkResolver"/>
    </bean>

    <bean id="genericPageFactory" class="org.dd4t.core.factories.impl.GenericPageFactory">
        <property name="cacheProvider" ref="cacheProvider"/>
        <property name="pageProvider" ref="pageProvider"/>
        <property name="filters">
            <list>
                <ref bean="hybridPublishingFilter"/>
                <ref bean="richTextWithLinksResolverFilter"/>
            </list>
        </property>
    </bean>
</beans>
